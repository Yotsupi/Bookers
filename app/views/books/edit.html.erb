<h1>Editing Book</h1>

<%= form_with model: @book, url: update_book_path(@book.id), local: true do |f| %>
<div class ="field">
  <label for="Book_title">Title</label>
  <br>
  <%= f.text_field :title %>
</div>
<div class ="field">
  <label for="Book_body">Body</label>
  <br>
  <%= f.text_area :body %>
</div>
<div class ="actions">
  <%= f.submit 'Update Book' %>
</div>
<% end %>

<%= link_to "Show", book_path(@book.id) %> |
<%= link_to "Back", '/books' %>
