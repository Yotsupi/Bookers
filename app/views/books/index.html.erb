<h1>Books</h1>
<% @books.each do |book| %>
<h3>Title</h3>
<%= book.title %>
<h3>Body</h3>
<%= book.body %>
<%= link_to "show", book_path(book.id) %>
<% end %>


<h2>New Book</h2>
<%= form_with model:@book,url:'/books',local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_field :body %>

  <p>
  <%= f.submit 'Create Book' %>
  </p>

<% end %>
